{
    "root": true,
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "env": {
        "browser": false,
        "node": true
    },
    "ignorePatterns": [
        "dist"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "requireConfigFile": false
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-continue": [
            "warn"
        ],
        "no-console": [
            "error"
        ],
        "class-methods-use-this": [
            "warn"
        ],
        "import/prefer-default-export": [
            "warn"
        ],
        "import/extensions": [
            "error",
            "ignorePackages"
        ],
        "no-restricted-syntax": [
            "warn"
        ],
        "no-await-in-loop": [
            "warn"
        ]
    }
}